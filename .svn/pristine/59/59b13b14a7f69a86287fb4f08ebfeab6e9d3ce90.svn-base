log4j.rootLogger=DEBUG, logFile
log4j.appender.logFile=org.apache.log4j.RollingFileAppender
log4j.appender.logFile.File=../Stockpile-logs/log_Report_StockPile.logs
#log4j.appender.logFile.File=F:/eclipse3.6/workspace/Stockpile/Stockpile-logs/log_Report_StockPile.logs
log4j.appender.logFile.layout=org.apache.log4j.PatternLayout
log4j.appender.logFile.layout.ConversionPattern=%5p | %d | %F | %L | %m%n
org.apache.log4j.WriterAppender.fileAppend=True
log4j.appender.logFile.MaxFileSize=1500kb
log4j.appender.logFile.MaxBackupIndex=15        

log4j.appender.cons=org.apache.log4j.ConsoleAppender
log4j.appender.cons.layout=org.apache.log4j.PatternLayout
log4j.appender.cons.layout.ConversionPattern=[%F\:%M\:%L] %d -%5p %m %n 

